<h3> Create a new Event! </h3>

<%= form_for @event, method: :post do |form| %>
  <%= form.text_field :name, placeholder: "Your Events Name" %>
  <%= form.text_field :location, placeholder: "Where is your Event located?" %>
  <%= form.text_field :date, placeholder: "When is the happening?" %> <br />
  <%= form.text_area :description, placeholder: "Please enter a good Description!" %>
  <%= form.submit "Submit" %>
<% end %>